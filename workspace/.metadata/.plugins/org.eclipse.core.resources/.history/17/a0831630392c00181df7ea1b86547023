package paquete;

import java.io.File;
import java.io.FileNotFoundException;
import java.util.ArrayList;
import java.util.Scanner;

public class Main {

	public static void main(String[] args) {
		
		Tabla tablaOriginal;
		ArrayList<String> atributos = new ArrayList<String>();
		ArrayList<ArrayList<String>> datos = new ArrayList<ArrayList<String>> ();;
		try {
			Scanner sc = new Scanner (new File ("AtributosJuego.txt"));
			
			String texto = sc.next();
			String [] aux = texto.split(",");
			
			for(String s : aux) {
				atributos.add(s);
			}
			sc.close();
			/*for( String e : atributos) {
				System.out.print(e + " ");
			}
			System.out.println();*/
			
		} catch (FileNotFoundException e) {
			e.printStackTrace();
		}
		try {
			Scanner sc = new Scanner (new File ("Juego.txt"));
			while(sc.hasNext()) {
				String texto = sc.next();
				String [] dato = texto.split(",");
				
				ArrayList<String> aux = new ArrayList<String>();
				for(String s : dato) {
					aux.add(s);
				}
				datos.add(aux);
			}
			sc.close();
			/*for(ArrayList<String> lista : datos) {
				for(String s: lista) {
					System.out.print(s + " ");
				}
				System.out.println();
			}*/
			
		} catch (FileNotFoundException e) {
			e.printStackTrace();
		}
		
		tablaOriginal = new Tabla(datos, atributos);
		Nodo nodoInicial = new Nodo();
		nodoInicial.setTabla(tabla);

	}

}
